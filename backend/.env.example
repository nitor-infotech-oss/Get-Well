# =============================================
# GetWell RhythmX Virtual Care — Environment
# =============================================
# Copy this to .env for local development.
# In production, use AWS Secrets Manager.

# ── Application ──
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:8080
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# ── PostgreSQL ──
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=getwell
DB_PASSWORD=getwell_dev
DB_NAME=getwell_rhythmx
DB_SSL=false

# ── Redis (session state for <2s latency) ──
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ── Amazon Chime SDK ──
# For GovCloud: us-gov-west-1
CHIME_REGION=us-east-1
CHIME_MEETING_REGION=us-east-1
CHIME_RECORDING_BUCKET=arn:aws:s3:::your-recording-bucket
CHIME_KMS_KEY_ARN=arn:aws:kms:us-east-1:123456789:key/your-key-id

# ── GetWell Stay API ──
GETWELL_STAY_BASE_URL=https://api.getwellnetwork.com
GETWELL_STAY_CLIENT_ID=your-client-id
GETWELL_STAY_CLIENT_SECRET=your-client-secret
GETWELL_STAY_TOKEN_ENDPOINT=/oauth/token

# ── WebSocket ──
WS_PORT=3001
WS_CORS_ORIGIN=*
